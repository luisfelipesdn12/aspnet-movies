@model aspnet_movies.Models.Genre;

@{
    ViewData["Title"] = "Cadastro de Gênero de Filme";
}

<h1>Cadastro de Gênero de Filme</h1>

@using (Html.BeginForm("Index", "Genre", FormMethod.Post))
{
    <div class="form-floating mb-3">
        @Html.EditorFor(d => d.Name, new { htmlAttributes = new { @class = "form-control" } })
        @Html.LabelFor(d => d.Name)
        @Html.ValidationMessageFor(d => d.Name, null, new { @class = "text-danger" })
    </div>
    <button type="submit" class="btn btn-primary mb-3">Cadastrar</button>

    <h5 class="mt-5">Gêneroes Cadastrados:</h5>
    @foreach (var genre in Genre.GetAll()) {
        <li>@genre.Id - @genre.Name</li>
    }
}
